Bootstrap: docker
From: frolvlad/alpine-miniconda3

%labels
    name nanopath-transport
    version 0.1.0
    author esteinig

%post
    export PATH=/opt/conda/bin:$PATH

    apk add --no-cache gcc bash

    /opt/conda/bin/conda install -c conda-forge -c bioconda pysam nextflow mash=2.2 kraken2 --yes \
        && /opt/conda/bin/conda clean -a \
        && find /opt/conda/ -follow -type f -name '*.a' -delete \
        && find /opt/conda/ -follow -type f -name '*.pyc' -delete

%environment
    export PATH=/opt/conda/bin:$PATH

%files
    . /data

